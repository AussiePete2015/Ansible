-- Table: public.tbflow
-- DROP TABLE public.tbflow;
CREATE TABLE public.tbflow
(
    moment timestamp(0) without time zone,
    pid character varying(20) COLLATE pg_catalog."default",
    system_pid bigint,
    count integer,
    thresholds character varying(255) COLLATE pg_catalog."default"
)
WITH (
    OIDS = FALSE
)
TABLESPACE pg_default;

ALTER TABLE public.tbflow
    OWNER to postgres;

GRANT ALL ON TABLE public.tbflow TO postgres;
GRANT SELECT ON TABLE public.tbflow TO pg_backup_act;
